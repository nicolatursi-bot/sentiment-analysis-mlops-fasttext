{
  "project_name": "Sentiment Analysis MLOps",
  "version": "1.0.0",
  "description": "Online reputation monitoring using FastText",
  "fasttext": {
    "lr": 0.5,
    "epoch": 25,
    "wordNgrams": 2,
    "dim": 100,
    "loss": "softmax",
    "model_type": "supervised"
  },
  "monitoring": {
    "window_size": 100,
    "drift_threshold": 0.05,
    "retraining_trigger_accuracy": 0.85
  },
  "data_paths": {
    "raw": "data/raw",
    "processed": "data/processed",
    "models": "models",
    "outputs": "outputs",
    "logs": "logs"
  },
  "dataset": {
    "name": "tweet_eval",
    "task": "sentiment",
    "num_classes": 3,
    "classes": ["negative", "neutral", "positive"]
  },
  "pipeline": {
    "ci_cd": "GitHub Actions",
    "testing_framework": "pytest",
    "code_quality": ["flake8", "black"]
  }
}